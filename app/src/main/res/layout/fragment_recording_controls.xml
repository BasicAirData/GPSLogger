<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/id_fragmentrecordingcontrols"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:orientation="vertical"
    android:focusable="false"
    android:descendantFocusability="blocksDescendants"
    tools:context="eu.basicairdata.graziano.gpslogger.FragmentRecordingControls">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:color/transparent"
        android:baselineAligned="false"
        android:weightSum="4">

        <View
            android:layout_weight="1"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>

        <View
            android:layout_weight="1"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>

        <TextView
            android:id="@+id/id_textView_Placemarks"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:freezesText="true"
            android:gravity="center_horizontal"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="12sp"
            android:textColor="@color/textColorPrimary"/>

        <TextView
            android:id="@+id/id_textView_GeoPoints"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:freezesText="true"
            android:gravity="center_horizontal"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="12sp"
            android:textColor="@color/textColorPrimary"/>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:src="@drawable/shadow"
        android:layout_width="match_parent"
        android:layout_height="5dp"
         />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorRecControlBackground"
        android:baselineAligned="false"
        android:weightSum="4">

        <TextView
            android:id="@+id/id_lock"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:freezesText="true"
            android:gravity="center_horizontal"
            app:drawableTopCompat="@drawable/ic_lock_24"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="12sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingBottom="4dp"
            android:paddingTop="5dp"/>

        <TextView
            android:id="@+id/id_stop"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:freezesText="true"
            android:gravity="center_horizontal"
            app:drawableTopCompat="@drawable/ic_stop_24"
            android:text="@string/stop"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="12sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingBottom="4dp"
            android:paddingTop="5dp"/>

        <TextView
            android:id="@+id/id_annotate"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:freezesText="true"
            android:gravity="center_horizontal"
            app:drawableTopCompat="@drawable/ic_add_location_24dp"
            android:text="@string/annotate"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="12sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingBottom="4dp"
            android:paddingTop="5dp"/>

        <TextView
            android:id="@+id/id_record"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:freezesText="true"
            android:gravity="center_horizontal"
            app:drawableTopCompat="@drawable/ic_record_24"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="12sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingBottom="4dp"
            android:paddingTop="5dp"/>
    </LinearLayout>

</LinearLayout>
